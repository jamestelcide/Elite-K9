@page
@model Elite_K9.Pages.Training.EditModel
@{
}

<br />
<h2>Edit Training</h2>

@if (Model.errorMessage.Length > 0)
{
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" 
        data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.trainingInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Trainings</label>
        <div class="col-sm-6">
            <input type="text" class="form-control"
                   name="training" value="@Model.trainingInfo.training" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price</label>
        <div class="col-sm-6">
            <input type="number" step="0.01" class="form-control"
                   name="price" value="@Model.trainingInfo.price" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Commission</label>
        <div class="col-sm-6">
            <input type="number" step="0.01" class="form-control"
                   name="commission" value="@Model.trainingInfo.commission" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>