@page
@model Elite_K9.Pages.Sales.CreateModel
@{
}

<br />
<h2>New Sale</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" 
        data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Trainings</label>
        <div class="col-sm-6">
            <input type="text" class="form-control"
                   name="training" value="@Model.salesInfo.training" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Customer</label>
        <div class="col-sm-6">
            <input type="text" class="form-control"
                   name="customer" value="@Model.salesInfo.customer" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Dog Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control"
                   name="dogName" value="@Model.salesInfo.dogName" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Trainer</label>
        <div class="col-sm-6">
            <input type="text" class="form-control"
                   name="trainer" value="@Model.salesInfo.trainer" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Sale Price</label>
        <div class="col-sm-6">
            <input type="number" step=".01" class="form-control"
                   name="salePrice" value="@Model.salesInfo.salePrice" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Sale Date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control"
                   name="saleDate" value="@Model.salesInfo.saleDate" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                        aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>