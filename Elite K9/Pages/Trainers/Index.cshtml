@page
@model Elite_K9.Pages.Trainers.IndexModel
@{
}

<br />
<h2>List of Trainers</h2>
<a class="btn btn-primary btn-sm" href="/Trainers/Create">New Trainer</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Start Date</th>
            <th>Termination Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listTrainers)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.startDate</td>
                <td>@item.terminationDate</td>
                <td>
                    <a class="btn btn-warning btn-sm"
                   href="/Trainers/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-danger btn-sm"
                   href="/Trainers/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>